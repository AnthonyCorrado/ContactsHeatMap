<h1>Login</h1>
<form {{action 'authenticate' on='submit'}}>
  <label for='identification'>Login</label>
  {{input value=identification placeholder='Email' class='form-control'}}

  <label for='password'>Password</label>
  {{input value=password placeholder='Password' class='form-control' type='password'}}

  <button type='submit' class='btn btn-default'>Login</button>
</form>

{{#if errorMessage}}
  <p>
    <strong>Login failed:</strong>
    {{errorMessage}}
  </p>
{{/if}}
